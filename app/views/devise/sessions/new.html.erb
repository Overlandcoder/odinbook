<div class="row justify-content-center p-5 m-5">
  <div class="d-flex justify-content-evenly">
    <div class="d-flex flex-column align-items-center">
      <h1 class="text-info fw-bold mb-4 text-center">A place where ideas grow.</h1>
      <%= image_tag "pencil.jpg", class: "rounded float-start img-fluid shadow-sm",
          style: "max-width: 300px" %>
    </div>

    <div class="ms-4 shadow p-5">
      <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb-3">
          <%= f.label :username, class: "form-label" %><br />
          <%= f.text_field :username, autofocus: true, class: "form-control" %>
        </div>

        <div class="field mb-3">
          <%= f.label :password, class: "form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password",
              class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="actions mb-3">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name),
            style: "text-decoration: none" %><br />
      <% end %>
      <hr>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= button_to "Create new account", new_registration_path(resource_name),
            method: "get", class: "btn btn-success" %><br />
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>