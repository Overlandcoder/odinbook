<h1>Posts</h1>
  <div class="container text-center">
  <div class="row">
    <div class="col-10">
      <% @posts.each do |post| %>
        <li>
          <h2><%= link_to "#{post.title.capitalize}", post_path(post.id) %></h2>
          <%= render "post", post: post %>
        </li>
      <% end %>
    </div>
  </div>
