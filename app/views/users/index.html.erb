<h1>Odinbook Users</h1>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to "#{user.username.capitalize}", user_path(user.id) %>
      <% if user.can_be_friends_with?(current_user) %>
        <%= button_to "Add Friend", user_friend_requests_path(user.id) %>
      <% end %>
    </li>
  <% end %>
</ul>
